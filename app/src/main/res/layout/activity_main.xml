<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/grey"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.robmcelhinney.PhoneBlock.MainActivity">


    <ToggleButton
    android:id="@+id/toggleButtonActive"
    style="@style/Base.Widget.AppCompat.Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="37dp"
    android:clipToPadding="false"
    android:text="@string/togglebutton"
    android:textOff="@string/not_driving"
    android:textOn="@string/driving"
    android:theme="@style/MyButton" />

    <Switch
    android:id="@+id/switchDetection"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toggleButtonActive"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="61dp"
    android:text="@string/turn_on_detection"
    android:textAlignment="viewStart"
    android:textColor="@color/black" />

    <Switch
    android:id="@+id/switchBT"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/switchDetection"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="23dp"
    android:text="@string/bluetooth_detection"
    android:textColor="@color/black" />

    <Switch
    android:id="@+id/switchOtherApps"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/switchBT"
    android:layout_alignStart="@+id/switchBT"
    android:layout_marginTop="23dp"
    android:layout_centerHorizontal="true"
    android:text="@string/block_apps"
    android:textColor="@color/black" />


    <Button
    android:id="@+id/appsButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/switchOtherApps"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    android:text="@string/choose_apps"
    android:theme="@style/ListAppsButton" />

</RelativeLayout>