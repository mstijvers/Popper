<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/grey"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fbp.Popper.MainActivity">




    <Switch
        android:id="@+id/switchOtherAppsSocial"
        android:layout_width="123dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="@string/block_apps_social"
        android:textColor="@color/black" />

    <Switch
        android:id="@+id/switchOtherAppsDesk"
        android:layout_width="170dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="61dp"
        android:layout_toStartOf="@+id/switchOtherAppsSocial"
        android:text="@string/block_apps_desk"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/BTSocial"
        android:layout_width="120dp"
        android:layout_height="57dp"
        android:layout_below="@id/switchOtherAppsSocial"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/BTDesk"
        android:layout_width="120dp"
        android:layout_height="57dp"
        android:layout_below="@id/switchOtherAppsDesk"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="24dp"
        android:layout_toStartOf="@+id/BTSocial"
        android:theme="@style/MyButton" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ImageViewToken"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:maxHeight="50dp"
        android:layout_below="@id/switchOtherAppsDesk"
        android:background="@drawable/popper_gray"
    />

    <Button
        android:id="@+id/appsButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ImageViewToken"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:text="@string/choose_apps"
        android:theme="@style/ListAppsButton"


        />
    <ImageView
        android:id="@+id/BTEnabled"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ImageViewToken"
        android:layout_alignEnd="@+id/appsButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        />


</RelativeLayout>