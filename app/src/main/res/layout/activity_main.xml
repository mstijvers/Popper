<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/blue"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.robmcelhinney.FYPDrivingApp.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ededed"
        android:clipToPadding="false">

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sittingcar"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sittingcar_prob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CurrentlyText"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:text="Greatest Prob:" />

    <TextView
        android:id="@+id/greatestProb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tableLayout"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginEnd="68dp"
        android:text="0" />

    <TextView
        android:id="@+id/CurrentlyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/currText"
        android:layout_alignBottom="@+id/currText"
        android:layout_alignParentStart="true"
        android:text="Curr Activity" />

    <TextView
        android:id="@+id/currText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BTtextView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/greatestProb"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/BTtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Bluey" />

    <Switch
        android:id="@+id/switchPant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginBottom="74dp"
        android:layout_toEndOf="@+id/CurrentlyText"
        android:layout_toStartOf="@+id/greatestProb"
        android:text="Phone in Pant Pocket"
        android:textColor="@color/white" />

    <Switch
        android:id="@+id/switchBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switchPant"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/CurrentlyText"
        android:layout_toStartOf="@+id/greatestProb"
        android:text="Bluetooth Detection"
        android:textColor="@color/white" />

    <Switch
        android:id="@+id/switchShirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignEnd="@+id/switchPant"
        android:layout_alignStart="@+id/switchPant"
        android:layout_marginBottom="20dp"
        android:text="Phone in Shirt Pocket"
        android:textColor="@color/white"/>

    <Switch
        android:id="@+id/switchDetection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/switchPant"
        android:layout_alignStart="@+id/switchPant"
        android:layout_marginBottom="98dp"
        android:layout_toStartOf="@+id/greatestProb"
        android:checked="true"
        android:text="Turn On Detection"
        android:textColor="@color/white"/>

    <ToggleButton
        android:id="@+id/toggleButtonActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ToggleButton"
        android:textOff="Not Driving"
        android:textOn="Driving" />

    <Switch
        android:id="@+id/switchOtherApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switchDetection"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:layout_alignEnd="@+id/switchPant"
        android:layout_alignStart="@+id/switchPant"
        android:text="Disable Distracting Apps" />

    <Button
        android:id="@+id/appsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toggleButtonActive"
        android:layout_marginTop="12dp"
        android:text="Apps" />

</RelativeLayout>
