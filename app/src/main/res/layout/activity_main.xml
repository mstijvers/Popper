<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/grey"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.robmcelhinney.PhoneBlock.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ededed"
        android:clipToPadding="false">

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sittingcar"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sittingcar_prob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CurrentlyText"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:text="Greatest Prob:" />

    <TextView
        android:id="@+id/greatestProb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tableLayout"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginEnd="68dp"
        android:text="0" />

    <TextView
        android:id="@+id/CurrentlyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/currText"
        android:layout_alignBottom="@+id/currText"
        android:layout_alignParentStart="true"
        android:text="Curr Activity" />

    <TextView
        android:id="@+id/currText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BTtextView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/greatestProb"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/BTtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Bluey" />

    <Switch
        android:id="@+id/switchDetection"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButtonActive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="Turn On Detection"
        android:textAlignment="viewStart"
        android:textColor="@color/black" />

    <Switch
        android:id="@+id/switchBT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchDetection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Bluetooth Detection"
        android:textColor="@color/black" />

    <Switch
        android:id="@+id/switchOtherApps"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchBT"
        android:layout_alignStart="@+id/switchBT"
        android:layout_marginTop="23dp"
        android:layout_centerHorizontal="true"
        android:text="Block Apps"
        android:textColor="@color/black" />

    <ToggleButton
        android:id="@+id/toggleButtonActive"
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="ToggleButton"
        android:textOff="Not Driving"
        android:textOn="Driving"
        android:theme="@style/MyButton"/>



    <Button
        android:id="@+id/appsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="Choose Apps"
        android:theme="@style/ListAppsButton" />

</RelativeLayout>



